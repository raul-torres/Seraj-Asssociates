@model Message
<head>
    <link rel="stylesheet" href="~/css/DashboardMessagesInfo.css" />
</head>
<br>
<div class="text-center">
    <h1 class="display-4 playfair">You got a message!</h1>
    @{
        if(@Model.IsRead == false)
        {
            <a href="/dashboard/messages" class="btn btn-outline-warning">&#8592; Go Back</a>
        }else{
            <a href="/dashboard/readmessages" class="btn btn-outline-warning">&#8592; Go Back</a>
        }
    }
</div>
<br>
<div class="jumbotron text-center">
    <div class="row">
        <div class="col-md-12 playfair">
            <h2 class="playfair">@Model.Name</h2>
        </div>
    </div>
    <br>
    <br>
    <div class="row fauna">
        <div class="col-md-6">
            <h5 class="slots">EMAIL</h5>
        </div>
        <div class="col-md-6">
            <h5 class="info">@Model.Email</h5>
        </div>
    </div>
    <br>
    <br>
    <div class="row fauna">
        <div class="col-md-6">
            <h5 class="slots">PHONE NUMBER</h5>
        </div>
        <div class="col-md-6">
            <h5 class="info">@Model.PhoneNumber</h5>
        </div>
    </div>
    <br>
    <br>
    <div class="row fauna">
        <div class="col-md-6">
            <h5 class="slots">RECEIVED</h5>
        </div>
        <div class="col-md-6">
            <h5 class="info">@Model.CreatedAt</h5>
        </div>
    </div>
    <br>
    <br>
    <div class="text-center fauna">
        <h5 class="slots">MESSAGE</h5>
        <br>
        <h5 class="info">@Model.Notes</h5>
        <br>
        @{
            if(@Model.IsRead == false)
            {
                <a href="/markasread/@Model.MessageId" class="MarkRead btn btn-outline-warning">Mark As Read</a>
            }else{
                <a href="/deletemessage/@Model.MessageId" class="delete btn btn-outline-danger">DELETE</a>
            }
        }
    </div>
</div>       